generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  @@map("usuarios")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  subtitle  String
  published DateTime
  image     String
  author    String
  tags      String[]

  @@map("posts")
}

model events {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String

  @@map("events")
}

model Membro {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  cargo     String?
  descricao String?
  fotoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("membros")
}

model competicao {
  id         Int      @id @default(autoincrement())
  nome       String
  descricao  String?
  dataInicio DateTime
  dataFim    DateTime
  local      String?
  premio     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  colocacao  colocacao[]


  @@map("competicoes")
}

model colocacao {
  id            Int      @id @default(autoincrement())
  competicaoId  Int
  posicao       Int
  ano          Int
  data         DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  competicao    competicao @relation(fields: [competicaoId], references: [id])

  @@map("colocacoes")
}
